      if (isset($_POST["cajaSeleccionada"]) && !empty($_POST["cajaSeleccionada"]) && isset($_POST["lote"]) && !empty($_POST["lote"])) {
        // Obtener los valores del formulario
        $cajaSeleccionada = $_POST["cajaSeleccionada"];
