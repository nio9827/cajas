    <?php
    // obtener el valor de las cajas por total
    $total = 0;
    $cajaSeleccionada = 0;

    // Verificar si se ha enviado el formulario
    if ($_SERVER["REQUEST_METHOD"] == "POST") {
      // Verificar si se ha seleccionado una caja
      if (isset($_POST["cajaSeleccionada"]) && !empty($_POST["cajaSeleccionada"])) {
        // Obtener el valor de la caja seleccionada
        $cajaSeleccionada = $_POST["cajaSeleccionada"];

        if ($cajaSeleccionada == "0") {
          $total = 0;
        } else {
          // Realizar la consulta para obtener el total correspondiente a la caja seleccionada
          $query = "SELECT COUNT(*) FROM certificados_mef_bnp WHERE caja = '$cajaSeleccionada'";
          $result = mysqli_query($connection, $query);

          // Verificar si la consulta se realizó con éxito
          if ($result) {
            $row = mysqli_fetch_row($result);
            $total = $row[0];
          } else {
            echo "Error en la consulta: " . mysqli_error($connection);
          }
        }
      }
    }
    ?>

    <div class="container " style="margin-left: 40px;">
      <div class="row justify-content-start">
        <div class="col-4">
          <form action="" method="post">
            <label for="cajaSeleccionada">Caja:</label>
            <select class="form-select" name="cajaSeleccionada" aria-label="Default select example" style="width: 45%;">
              <option value="0" selected>Seleccione listado</option>
              <option value="1">Caja 1</option>
              <option value="2">Caja 2</option>
              <option value="3">Caja 3</option>
            </select>

            <label for="lote">Lote</label>
            <input class="form-control" type="text" placeholder="X-X" name="lote" aria-label="default input example" style="width: 45%;">

            <input type="submit" value="Verificar" class="btn btn-primary" style="position: relative; left: 240px; top: -40px;">
          </form>
        </div>
        <div class="col-2">
          <div class="alert alert-light" role="alert" style="position: relative; top: 10px;">
            Caja:
            <?php echo $cajaSeleccionada; ?>
          </div>
        </div>
        <div class="col-2">
          <div class="alert alert-light" role="alert" style="position: relative; top: 10px;">
            Total:
            <?php echo $total; ?>
          </div>
        </div>
      </div>
    </div>

   <?php

if ($total > 0) {

    $query = "SELECT * FROM certificados_mef_bnp";
    $result = mysqli_query($connection, $query);

    if (!$result) {
        echo "No se ha podido realizar la consulta: " . mysqli_error($connection);
    } else { //comienza el proceso de validación
        if (mysqli_num_rows($result) > 0) {

            echo '
            <hr style="margin: 2; color: #00588D;">

            <div class="container-md text-center"  style="margin: 0; width: 970px;">
                <div class="row">
                    <div class="col" style="border-right: 1px solid #00588D ; width: 960px; height: 595px; overflow: scroll;">
                        <table class="table caption-top" style="width: 955px;">
                            <caption>Listado sin auditar</caption>
                            <thead>
                                <tr>
                                    <th scope="col">Cepadem</th>
                                    <th scope="col">Caja</th>
                                    <th scope="col">Lote</th>
                                    <th scope="col">Fecha</th>
                                    <th scope="col">Fecha de Negociado</th>
                                    <th scope="col">Nombre</th>
                                    <th scope="col">Apellido</th>
                                    <th scope="col">Cédula</th>
                                    <th scope="col">Monto</th>
                                </tr>
                            </thead>
                            <tbody>';

            while ($row = mysqli_fetch_assoc($result)) {
                echo '
                                <tr>
                                    <td>' . htmlspecialchars($row['cepadem']) . '</td>
                                    <td>' . htmlspecialchars($row['caja']) . '</td>
                                    <td>' . htmlspecialchars($row['lote']) . '</td>
                                    <td>' . htmlspecialchars($row['fecha']) . '</td>
                                    <td>' . htmlspecialchars($row['Fechanegociado']) . '</td>
                                    <td>' . htmlspecialchars($row['nombre']) . '</td>
                                    <td>' . htmlspecialchars($row['apellido']) . '</td>
                                    <td>' . htmlspecialchars($row['cedula']) . '</td>
                                    <td>' . htmlspecialchars($row['monto']) . '</td>
                                </tr>';
            }

            echo '
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>';

        } else {
            echo "<p>No se encontraron registros.</p>";
        }

        mysqli_close($connection);
    }
}

